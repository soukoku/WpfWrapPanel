<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lib="clr-namespace:WpfWrapPanel;assembly=WpfWrapPanel"
        xmlns:local="clr-namespace:TestApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        x:Name="TheWindow">
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:ItemViewModel}">
            <StackPanel Width="{Binding DataContext.ItemSize, ElementName=TheWindow}" Height="{Binding DataContext.ItemSize, ElementName=TheWindow}">
                <Rectangle Width="50" Height="50" Fill="{Binding Color}" Margin="0,0,10,0" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Name}" Margin="0,0,10,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Standard WrapPanel" HorizontalAlignment="Center" FontWeight="Bold" Margin="10"/>

        <ListBox x:Name="StandardListBox" Grid.Column="0" Grid.Row="1" Margin="10" ItemsSource="{Binding LotsOfItems}" SelectionMode="Extended"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionChanged="StandardListBox_SelectionChanged">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>


        <Label Grid.Row="0" Grid.Column="1" Content="VirtualizingWrapPanel" HorizontalAlignment="Center" FontWeight="Bold" Margin="10"/>

        <ListBox x:Name="VirtualizingListBox" Grid.Column="1" Grid.Row="1" Margin="10" ItemsSource="{Binding LotsOfItems}" SelectionMode="Extended"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 VirtualizingPanel.IsVirtualizing="True"
                 VirtualizingPanel.VirtualizationMode="Recycling">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <lib:VirtualizingWrapPanel ItemWidth="{Binding DataContext.ItemSize, ElementName=TheWindow}" 
                                               ItemHeight="{Binding DataContext.ItemSize, ElementName=TheWindow}" 
                                                HorizontalSpacing="5" VerticalSpacing="5"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal">
            <TextBlock Text="Item Size:" VerticalAlignment="Center" Margin="5"/>
            <Slider Minimum="50" Maximum="200" Value="{Binding ItemSize}" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
